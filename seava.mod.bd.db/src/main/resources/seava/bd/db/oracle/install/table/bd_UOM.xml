<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="nan21" id="TBL-bd_UOM">
		<createTable tableName="bd_UOM">
			<column name="ACTIVE" type="number(1)">
				<constraints nullable="false"/>
			</column>
			<column name="CLIENTID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="CODE" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDAT" type="DATE">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDBY" type="varchar2(32)">
				<constraints nullable="false"/>
			</column>
			<column name="DESCRIPTION" type="varchar2(400)"/>
			<column name="ID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDAT" type="DATE">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDBY" type="varchar2(32)">
				<constraints nullable="false"/>
			</column>
			<column name="NAME" type="varchar2(255)">
				<constraints nullable="false"/>
			</column>
			<column name="NOTES" type="varchar2(4000)"/>
			<column name="REFID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="VERSION" type="number(10)"/>
			<column name="TYPE_ID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet author="nan21" id="PK-bd_UOM">
		<addPrimaryKey 
			constraintName="PK_bd_UOM"
			tableName="bd_UOM"
			columnNames="ID"/>
	</changeSet>
	
	<changeSet author="nan21" id="UK-bd_UOM-1">
		<addUniqueConstraint
			constraintName="UK_bd_UOM1"
			tableName="bd_UOM"
			columnNames="CLIENTID,CODE"/>
	</changeSet>
	
	<changeSet author="nan21" id="UK-bd_UOM-2">
		<addUniqueConstraint
			constraintName="UK_bd_UOM2"
			tableName="bd_UOM"
			columnNames="CLIENTID,NAME"/>
	</changeSet>

</databaseChangeLog>
