<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="nan21" id="TBL-bd_GEO_LOCATION">
		<createTable tableName="bd_GEO_LOCATION">
			<column name="ACTIVE" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="ADRESS" type="text"/>
			<column name="CITYNAME" type="varchar(255)"/>
			<column name="CLIENTID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="FORBILLING" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="FORMAILING" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="FORSHIPPING" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="ID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="NOTES" type="text"/>
			<column name="REFID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="REGIONNAME" type="varchar(255)"/>
			<column name="TARGETREFID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="VERSION" type="bigint(10)"/>
			<column name="ZIP" type="varchar(32)"/>
			<column name="CITY_ID" type="varchar(64)"/>
			<column name="COUNTRY_ID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="REGION_ID" type="varchar(64)"/>
		</createTable>
	</changeSet>

	<changeSet author="nan21" id="PK-bd_GEO_LOCATION">
		<addPrimaryKey 
			constraintName="PK_bd_GEO_LOCATION"
			tableName="bd_GEO_LOCATION"
			columnNames="ID"/>
	</changeSet>

</databaseChangeLog>
